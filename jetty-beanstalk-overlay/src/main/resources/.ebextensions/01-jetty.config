commands:
  0_mv_distro:
    command: mv jetty-distribution-${jetty-version} jetty-8
    cwd: /opt
    test: test ! -e jetty-8
  1_copy_start_file:
    command: cp bin/jetty.sh /etc/init.d/jetty8
    cwd: /opt/jetty-8
    test: test ! -e /etc/init.d/jetty8
  2_set_permissions:
    command: chmod 755 jetty8
    cwd: /etc/init.d
  3_copy_start_ini:
    command: cp start.ini /opt/jetty-8
    cwd: /opt/jetty-beanstalk-resources
